{
    "editor.renderWhitespace": "all",
    "zenMode.hideLineNumbers": false,
    "zenMode.fullScreen": true,
    "zenMode.centerLayout": true,
    "editor.mouseWheelZoom": true,
    "editor.codeLensFontSize": 0,
    "editor.fontSize": 13,
    "editor.lineHeight": 1.2,
    "editor.rulers": [
        80,
        100
    ],
    "editor.fontLigatures": false,
    "editor.fontFamily": "'Cascadia Mono', 'Roboto Mono', 'Fira Code Retina', Consolas, 'Courier New', monospace",
    "files.exclude": {
        "**/__pycache__/": true,
        "**/.mypy_cache/": true,
        "**/.pytest_cache/": true,
        "**/*.egg-info/": true,
    },
    "workbench.startupEditor": "none",
    "window.openFilesInNewWindow": "on",
    "window.openFoldersInNewWindow": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.fontFamily": "'Cascadia Mono', monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "workbench.layoutControl.enabled": false,
    "markdown.preview.fontSize": 14,
    "markdown.preview.lineHeight": 1.2,
    "markdown.preview.fontFamily": "'Segoe UI'",
    "notebook.markup.fontSize": 12,
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.lineNumbers": "on",
    "[markdown]": {
        "editor.minimap.enabled": false,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 70,
    },
    "notebook.breadcrumbs.showCodeCells": false,
    "notebook.editorOptionsCustomizations": {
        "editor.fontFamily": "'Roboto Mono'",
        "editor.codeLensFontSize": 8,
        "editor.fontSize": 13,
        "editor.find.addExtraSpaceOnTop": false,
        "editor.lineHeight": 0,
        "editor.lineNumbers": "on",
        "editor.padding.top": 0,
        "editor.padding.bottom": 0,
    },
    "notebook.globalToolbar": false,
    "notebook.insertToolbarLocation": "hidden",
    "notebook.outline.showCodeCells": true,
    "notebook.output.fontSize": 13,
    "notebook.output.lineHeight": 13.8,
    "notebook.showCellStatusBar": "hidden",
    "notebook.cellToolbarLocation": {
        "default": "hidden"
    },
    "remote.autoForwardPortsSource": "hybrid",
    "redhat.telemetry.enabled": false,
    "vim.useCtrlKeys": false,
    "files.eol": "\n",
}

